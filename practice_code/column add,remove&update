import pandas as pd
data={
    "name":["ratul","saion","sakib","neymar","abd"],
    "age":[10,20,21,5,30],
    "city":["dhaka","german","america","brazil","sa"],
    "perfomance":[10,9,8,9,7],
    "salary":[10000,20000,15000,25000,30000]

}
df=pd.DataFrame(data)
print("sample data frame")
print(df.to_string(index=False))
print("*******")
df.loc[0,"age"]=15
print("after updating")
print(df.to_string(index=False))
print("*******")
df.loc[0,["salary","city"]]=[25000,"frankfurt"]
print("after updating 2 elements")
print(df)
print("*******")
df["salary"]=df["salary"]*5
print("after salary update")
print(df)
print("*******")
df.loc[df["name"] == "sakib", "salary"] = df["salary"] * 5

# df.loc[...]: This tells Pandas, "I am looking for a specific location (row and column) in the data."
# df["name"] == "sakib": This is your Boolean Condition. It acts as a filter to select only the row(s) where the name is "sakib".
# "salary": This is the specific Column Name that you want to update for the selected row.
# = value: This is where you assign the new value or perform a specific calculation for that location.
print("after updating specific person's salary")
print(df.loc[df["name"] == "sakib", "salary"])
print("*******")
#who's age is greater than 20 and lives i dhaka,his salary will increase 2*
# Multiple conditions wrap kora mandatory
df.loc[(df["age"] > 15) & (df["city"] == "german"), "salary"] *= 2
print("who's age is greater than 15 and lives i german,his salary will increase 2*")
print(df.loc[df["city"]=='german','salary'])
# df.loc[condition, "salary"]
# df.loc[condition, "salary"] = df["salary"] * 5
# df.loc[condition, "salary"] *= 5
