import pandas as pd
data={
    "name":["ratul","saion","sakib","neymar","abd"],
    "age":[10,20,21,5,30],
    "city":["dhaka","german","america","brazil","sa"],
    "perfomance":[10,9,8,9,7],
    "salary":[10000,20000,15000,25000,30000]

}
df=pd.DataFrame(data)
print("sample data frame")
print(df.to_string(index=False))
print("after bonus column add")
df["bonus"]=df["salary"]*1.5
print(df.to_string(index=False))
#using insert
#df.insert(loc,"column_name",some_data)
print("add id value")
df.insert(0,"id",[1,2,3,4,5])
print(df.to_string(index=False))
df["gender"]=["m","m","m","m","m"]
print(df.to_string(index=False))



